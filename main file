################################################################################################################################       
#### MAIN MENU #################################################################################################################

user_name = input("What is your name? ")

print(f"""
Welcome {user_name}, you are an adventurer on a planet plagued by mutated animals. \
Your job is to find the cure to the disease causing this and save the world! \
You can do this by completing all the levels and collecting 4 tokens. \
Well, let's not wait! Let's start!""")

while len(end_count) != 4:
   print(f"""
You still need to help someone.""")
   print("""
These people need your help:

Tessa (1)
Boy (2)
Roberto (3)
Niek (4)""")

   world = input("What world do you want to enter? ")
   if world == "1" or world == "tessa" or world == "Tessa":
       world_tessa()
   elif world == "2" or world == "boy" or world == "Boy":
       world_boy()
   elif world == "3" or world == "roberto" or world == "Roberto":
       roberto_world(user_name)
   elif world == "4" or world == "niek" or world == "Niek":
       if len(end_count) != 3:
           print("""
I'm sorry you can't play this level yet. Complete the other levels to gain acces to the bank.""")
       else:
           world_Niek()
   else:
       print("""
Please enter your choice: Tessa (1), Boy (2), Roberto (3), Niek (4).""")
else: 
    print(f"""
You once again helped everybody in need!""")
    print("""
Thanks for saving the planet and for playing!""")
